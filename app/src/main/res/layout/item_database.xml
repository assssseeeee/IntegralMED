<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ItemDatabaseCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_item_database"
            android:layout_width="@dimen/image_view_item_database_width_and_height"
            android:layout_height="@dimen/image_view_item_database_width_and_height"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toStartOf="@+id/text_view_hospital_item_database"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.integralmed.utils.IMEDTextViewBold
            android:id="@+id/text_view_hospital_item_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_database_text_view_margin_left"
            android:hint="@string/hospital_name"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/item_database_text_view_text_size"
            app:layout_constraintStart_toEndOf="@id/image_view_item_database"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.integralmed.utils.IMEDTextView
            android:id="@+id/text_view_medical_equipment_item_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_database_text_view_margin_left"
            android:hint="@string/medical_equipment"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/item_database_text_view_text_size"
            app:layout_constraintStart_toEndOf="@+id/image_view_item_database"
            app:layout_constraintTop_toBottomOf="@+id/text_view_hospital_item_database" />

        <com.example.integralmed.utils.IMEDTextView
            android:id="@+id/text_view_factory_number_item_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_database_text_view_margin_left"
            android:hint="â„– 000001"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/item_database_text_view_text_size"
            app:layout_constraintStart_toEndOf="@id/image_view_item_database"
            app:layout_constraintTop_toBottomOf="@+id/text_view_medical_equipment_item_database" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>