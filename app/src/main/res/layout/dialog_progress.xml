<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="@dimen/small_margin">

    <ProgressBar
        android:id="@+id/progress_bar_dialog"
        android:layout_width="60dp"
        android:layout_height="@dimen/width_progress_bar"
        app:layout_constraintEnd_toEndOf="@dimen/height_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/text_view_progress_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.integralmed.utils.IMEDTextView
        android:id="@+id/text_view_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:text="@string/please_wait"
        android:textSize="@dimen/progress_bar_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progress_bar_dialog"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>